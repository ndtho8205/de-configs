#!/usr/bin/bash

set -o errexit
set -o errtrace
set -o nounset
set -o pipefail

main() {
  all=false

  _parse_params "$@"

  vpn=$(protonvpn status | head -n 1 | awk '{print $2}')

  battery=$(batteryctl --stdout)

  volume=$(volumectl --stdout)
  brightness=$(brightnessctl --stdout)

  date=$(date +'%a, %b %d, %Y')
  time=$(date +'%r')

  notification_id=$(cksum <<<"$(basename "$0")" | cut -f 1 -d ' ')
  output="|  $time |   $date\\n| $battery | 墳 $volume |  $brightness\\n| 嬨 $vpn"

  dunstify \
    --appname="notify" \
    --replace="$notification_id" \
    -- \
    "Notify" \
    "$output"
}

_print_usage() {
  cat <<EOF
usage: $(basename "$0") [OPTION]

Options:
  --all          All info: time, date, volume, brightness
  -h, --help     Show this help and exit
EOF
}

_parse_params() {
  if [[ $# -eq 0 ]]; then
    echo "No option specified."
    exit 1
  fi

  local param

  while [[ $# -gt 0 ]]; do
    param="$1"
    shift

    case $param in
    --all)
      all=true
      ;;
    -h | --help)
      _print_usage
      exit 0
      ;;
    *)
      echo "error: unrecognized arguments: $param"
      exit 1
      ;;
    esac
  done
}

main "$@"
