#!/usr/bin/env bash

set -o errexit
set -o errtrace
set -o nounset
set -o pipefail

main() {
  action='' notify=false stdout=false

  _parse_params "$@"

  if [[ -n $action ]]; then
    xbacklight -$action 5
  fi

  if [[ $notify == "true" ]]; then
    _send_notification
  fi

  if [[ $stdout == "true" ]]; then
    _get_brightness
  fi
}

_print_usage() {
  cat <<EOF
usage: $(basename "$0") [OPTION]

Options:
  --inc          Increase brightness by 5%
  --dec          Decrease brightness by 5%
  --notify       Send notification
  --stdout       Print current brightness level
  -h, --help     Show this help and exit
EOF
}

_parse_params() {
  if [[ $# -eq 0 ]]; then
    echo "No option specified."
    echo
    _print_usage
    exit 1
  fi

  local param

  while [[ $# -gt 0 ]]; do
    param="$1"
    shift

    case $param in
    --inc)
      action=inc
      ;;
    --dec)
      action=dec
      ;;
    --notify)
      notify=true
      ;;
    --stdout)
      stdout=true
      ;;
    -h | --help)
      _print_usage
      exit 0
      ;;
    *)
      echo "error: unrecognized arguments: $param"
      exit 1
      ;;
    esac
  done
}

_get_brightness() {
  xbacklight -get | awk -F. '{print $1}'
}

_send_notification() {
  local appname notification_id notification_icon

  appname=$(basename "$0")
  notification_id=$(cksum <<<"$(basename "$0")" | cut -f 1 -d ' ')

  if [[ $action == "dec" ]]; then
    notification_icon=
  elif [[ $action == "inc" ]]; then
    notification_icon=
  else
    notification_icon=
  fi

  dunstify \
    --appname="$appname" \
    --urgency="low" \
    --icon="$notification_icon" \
    --replace="$notification_id" \
    "Brightness" \
    "$(_get_brightness)"
}

main "$@"
