#!/usr/bin/bash

set -o errexit
set -o errtrace
set -o nounset
set -o pipefail

print_usage() {
  cat <<EOF
usage: $(basename "$0") [OPTION]

Options:
  --all          All info: time, date, volume, brightness
  -h, --help     Show this help and exit
EOF
}

parse_params() {
  if [[ $# -eq 0 ]]; then
    echo "No option specified."
    exit 1
  fi

  local param
  all=false

  while [[ $# -gt 0 ]]; do
    param="$1"
    shift

    case $param in
    --all)
      all=true
      ;;
    -h | --help)
      print_usage
      exit 0
      ;;
    *)
      echo "error: unrecognized arguments: $param"
      exit 1
      ;;
    esac
  done
}

handle() {
  time=$(date +'%r')
  date=$(date +'%a, %b %d, %Y')
  volume=$(volumectl --stdout)
  brightness=$(brightnessctl --stdout)

  output="Time: $time  Date: $date  Volume: $volume  Brightness: $brightness"

  notify-send $"$output"
}

if ! (return 0 2>/dev/null); then
  parse_params "$@"

  handle
fi
