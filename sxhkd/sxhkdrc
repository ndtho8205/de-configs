#################################
#    WM Independent Hotkeys     #
#################################

# terminal emulator
{super + Return,ctrl + alt + t}
  sh -c "$TERMINAL"

# program launcher
super + r
  rofi -show drun

# switch between applications
super + Tab
  rofi -show window

# power menu
super + Escape
  power

# reload sxhkd configuration
super + shift + Escape
  pkill -USR1 -x sxhkd; \
  notify-send "sxhkd config reloaded."

# restart bspwm
super + alt + Escape
  bspc wm -r

#################################
#     Application Hotkeys       #
#################################

# run primary browser: Firefox Developer Edition
super + b
  $DE_BROWSER

# run secondary browser: Google Chrome
super + shift + b
  google-chrome-stable

#################################
#        System Hotkeys         #
#################################

# show basic information
super + i
  notify --all

# set up multi-monitors
super + p
  multidisplay

# screenshot
{_,ctrl + ,shift + }@Print
  screenshot --{desktop,window,selection} --clipboard --notify

# volume controls
XF86Audio{LowerVolume,RaiseVolume,Mute}
  volumectl --{dec,inc,toggle-mute} --notify

# brightness controls
XF86MonBrightness{Down,Up}
  brightnessctl --{dec,inc} --notify

#################################
#        BSPWM Hotkeys          #
#################################


# change focused desktop window gap
super + {minus,equal}
  bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 2 ))

# close/kill node
super + {_,shift + }w
  bspc node -{c,k}

# set the window state
super + {t,shift + t,s,f}
  bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

#
# Focusing
#

# focus the given desktop
super + {1-9,0}
  bspc desktop -f '^{1-9,10}'

# focus the last node/desktop
super + {_,shift + } + grave
  bspc {node,desktop} -f last

# focus the node in the given direction
super + {h,j,k,l}
  bspc node -f {west,south,north,east}

#
# Moving
#

# send the current node to the given desktop
super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

# move a floating window
super + {Left,Down,Up,Right}
  bspc node -v {-20 0,0 20,0 -20,20 0}

# move the current node to the given direction
super + shift + {h,j,k,l}
  bspc node -s {west,south,north,east}

# swap the current node and the biggest node in the same desktop
super + g
  bspc node -s biggest.local

# move the current node to a pre-selected space
super + m
  bspc node -n last.!automatic

#
# Resizing
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
  bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
  bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#
# Preselecting
#

# preselect the direction
super + ctrl + {h,j,k,l}
  bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
  bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
  bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
  bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel






# alternate between the tiled and monocle layout
super + _
  bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
  bspc node newest.marked.local -n newest.!automatic.local

# set the node flags
super + ctrl + {m,x,y,z}
  bspc node -g {marked,locked,sticky,private}


# focus the node for the given path jump
super + {p,b,comma,period}
  bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
  bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
  bspc desktop -f {prev,next}.local


# focus the older or newer node in the focus history
super + {o,i}
  bspc wm -h off; \
  bspc node {older,newer} -f; \
  bspc wm -h on
